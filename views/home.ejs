        <%=title%>
      </title>
     <link rel="stylesheet" href="\css\home.css">

</head>

    <body> 

        <div class="heading1">
        <h3 id=first-heading><%=title%></h3>
         </div>
  


        <!-- creating form-->
        <form action="/create-task" method="post" >
           

          <div class="description">
            <label for="describe">Description</label>
            <br>
            <input type="text" name="description"id="describe" placeholder="what do you need ?"  required>
          </div>
        
           
          <div class="form-group">
              <label for="category">CATEGORY</label>
              <select name="category" id="category" required>
                  <option value="" selected>Choose a Category</option>  
                  <option value="SCHOOL">School</option>
                  <option value="WORK">Work</option>
                  <option value="SHOPPING">Shopping</option>
                  <option value="GROCERY">Grocery</option>
                  <option value="PERSONAL">Personal</option>
                  <option value="EVENT">Event</option>
                  <option value="OTHERS">Other</option>
              </select>
          </div>
          
      
           
              <div class="side-date">

                  <label for="date"><P id="due-date">DUE DATE</P></label>
                  <input type="date" name="duedate" id="date" placeholder="MM/DD/YYYY"  required>
                </div>
           

              <div class="time-set">
                  <label for="time">DUE TIME</label>
                
                  <input type="time" id="time" name="duetime" placeholder="MM/DD/YYYY"    required>
                
                </div>   
         
          
           <!--  submit button -->
          <div class="add">

              <span class="add-button">
               <span class="plus"> <i class="fas fa-plus"></i></span>
              <button type="submit"><span class="add-it">ADD TASK</span></button> 
              </span>

          </div>

        </form>

  

